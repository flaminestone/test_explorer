<div class="container">


  <%= form_for(resource, as: resource_name,:html => {:class => "form-signin"}, url: registration_path(resource_name)) do |f| %>
      <h2 class="form-signin-heading">Please sign up</h2>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, :class => 'form-control', :type => "email", :placeholder => "Email address", :required => ""  %>
      <%= f.password_field :password, autocomplete: "off", autofocus: true, :class => 'form-control', :type => "password", :placeholder => "Password", :required => "" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, :class => 'form-control', :type => "password", :placeholder => "Password confirmation", :required => ""  %>
      <%= f.submit "Sign up", :class => "btn btn-lg btn-success btn-block"  %>
  <% end %>
</div>
