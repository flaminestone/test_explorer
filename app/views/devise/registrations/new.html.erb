<div class="login_or_registr_box">
  <%= form_for(resource, as: resource_name, :html => {:class => "form-signin"}, url: registration_path(resource_name)) do |f| %>
      <p class="form-signin-heading">Please sign up</p>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, :class => 'form-control field-input', :type => "email", :placeholder => "Email address", :required => "" %>
      <%= f.password_field :password, autocomplete: "off", autofocus: true, :class => 'form-control field-input', :type => "password", :placeholder => "Password", :required => "" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, :class => 'form-control field-input margin_zero', :type => "password", :placeholder => "Password confirmation", :required => "" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, :class => 'form-control field-input margin_zero', :placeholder => "Secret", :required => "" %>
      <%= f.submit "Sign up", :class => "btn-login" %>
  <% end %>
</div>
<a href=<%= new_session_path(resource_name) %> class="link">
  <div class="messages_no_circle link">
    Press to her for login if you have account
  </div>
</a>