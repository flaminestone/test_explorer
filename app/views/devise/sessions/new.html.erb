<div class="container">

    <%= form_for(resource, as: resource_name, :html => {:class => "form-signin"}, url: session_path(resource_name)) do |f| %>
      <h3 class="form-signin-heading">Please sign in</h3>
        <%= f.email_field :email, autofocus: true, :class => 'form-control', :type => "email", :placeholder => "Email address", :required => "" %>

        <%= f.password_field :password, autocomplete: "off", autofocus: true, :class => 'form-control', :type => "password", :placeholder => "Password", :required => "" %>
        <%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
      <div class="alert alert-info">
        <a href=<%= new_registration_path(resource_name)%> class="alert-link"> Press to her if you have not account</a>
      </div>
<% end %>
</div>