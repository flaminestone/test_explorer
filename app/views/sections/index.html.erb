<div class="container">
  <div class="row">
    <div class="btn-group btn-group-justified" role="group">
      <div class="btn-group" role="group">
        <%= button_to 'Create new section', new_section_path, :class => 'btn btn-default btn-success' %>
      </div>
    </div>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.where(blocking: false).each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Block', "/block/#{section.id}", :method => 'block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
<p>-------------------------------------------------------------------------------------------------------------------</p>
<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @sections.where(blocking: true).each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Unblock', "/unblock/#{section.id}", :method => 'unblock' %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>