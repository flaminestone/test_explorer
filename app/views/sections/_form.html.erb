<div class="create_new">
  <%= form_for(@section, :html => {:class => "form-horizontal"}) do |f| %>
      <div class="form_element">
        <div style="  text-align: center;font-size: 22px;">
          <%=t :create_section %>
        </div>
      </div>
      <div class="form_element">
        <%= f.text_field :name, class: 'field-input-section-name', placeholder: t(:section_name), autofocus: true %>
      </div>
      <div class="form_element">
        <%= f.submit :class => "create_new_section", :value=> t(:create_section)%>
      </div>
  <% end %>
</div>
