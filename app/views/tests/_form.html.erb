<h3 class="form-signin-heading">Create Test</h3>

<%= form_for([@section, @test], :html => {:class => "form-horizontal"}) do |f| %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.text_field :name, class: "form-control input_data", placeholder: "Test name", autofocus: true %>
          <%= f.text_field :time_out, class: "form-control input_data", placeholder: "Time out" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3 comeback">
          <div class="edit-test-control">
            <%= f.check_box :come_back, :class => "comeback" %>
            <label>Opportunity to return</label>
          </div>

        </div>
        <div class="col-md-6 col-md-offset-3">
          <%= f.submit :class => "create_new_section" %>
        </div>
      </div>
    </div>
<% end %>