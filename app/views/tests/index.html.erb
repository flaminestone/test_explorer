<p id="notice"><%= notice %></p>

<h1>Listing Tests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= link_to 'Show', controller: "tests", action: "show", id: test %></td>
        <td><%= link_to 'Edit', controller: "tests", action: "edit", id: test %></td>
        <td><%= link_to 'Destroy',{controller: "tests",action: "destroy", id: test }, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Test',  controller: "tests", action: "new" %>