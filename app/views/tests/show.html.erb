<p id="notice"><%= notice %></p>
<%= link_to 'Back', controller: "sections", action: "show", id: @section %>
<%= link_to 'Destroy', { controller: "tests",action: "destroy", id: @test }, method: :delete, data: { confirm: 'Are you sure?' } %>
<h1>
  <%= @test.name %> |<%= link_to 'Edit', controller: "tests", action: "edit", id: @test %>
</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @questions.each do |question| %>
      <tr>
        <td><%= question.name %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
